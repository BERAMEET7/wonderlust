<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
    <div class="col-8 offset-2">
    <h3 style="text-align: center;">ADD YOUR OWN PROPERTY</h3>
    <form method="post" action="/listing" novalidate class="mt-3 border p-2 mb-3 needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="listing[title]" class="form-label">Title</label>
            <input type="text" placeholder="enter title here" name="listing[title]" class="form-control" required>
            <div class="invalid-feedback">Title is Required</div>
            <div class="valid-feedback">Looks good</div>
        </div>
        <div class="mb-3">
            <label for="listing[description]" class="form-label">Description</label>
            <textarea type="text" placeholder="enter description here" name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Description is Required</div>
            <div class="valid-feedback">Looks good</div>
        </div>
        <div class="mb-3">
            <label for="listing[location]" class="form-label">Location</label>
            <input type="text" placeholder="enter title location" name="listing[location]" class="form-control" required >
            <div class="invalid-feedback">Location is Required</div>
            <div class="valid-feedback">Looks good</div>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="listing[price]" class="form-label">Price</label>
                <input type="number" placeholder="enter title price" name="listing[price]" class="form-control" required>
                <div class="invalid-feedback">Price is Required</div>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3 col-8">
                <label for="listing[country]" class="form-label">Country</label>
                <input type="text" placeholder="enter title country" name="listing[country]" class="form-control" required>
                <div class="invalid-feedback">Country is Required</div>
                <div class="valid-feedback">Looks good</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="listing[image][url]" class="form-label">Image</label>
            <input type="file" placeholder="enter image here" name="listing[image][url]" class="form-control" required>
            <div class="invalid-feedback">Image is Required</div>
            <div class="valid-feedback">Looks good</div>
        </div>
        <button type="submit" class="btn btn-dark mt-2 generate-btn">ADD TO WANDERLUST</button>
    </form>
    </div>
    </div>

</body>
